{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "stripInternal": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/static"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
